<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       xmlns:p="http://www.springframework.org/schema/p"
>

    <bean id="orders" class="com.pxw.spring.orders.Orders">
        <constructor-arg name="oname" value="软件技术3班"></constructor-arg>
        <constructor-arg name="oaddr" value="四川城市职业学院"></constructor-arg>
    </bean>

    <bean id="Book" class="com.pxw.spring.orders.Book" p:cname="彭新文" p:caddr="城院">

    </bean>

    <bean id="userService" class="com.pxw.spring.service.UserService">
        <property name="userDao" ref="userDao"></property>
    </bean>
    <bean id="userDao" class="com.pxw.spring.dao.UserDaoImpl"></bean>

    <bean id="person" class="com.pxw.spring.people.Person">
        <property name="man">
            <bean class="com.pxw.spring.people.Man">
                <property name="name" value="李四"></property>
                <property name="age" value="19"></property>
            </bean>
        </property>
    </bean>

</beans>